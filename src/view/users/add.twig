{% extends '_template.twig' %}

{% block content %}
  <article>
    <h1>Add user</h1>
    <p>Add a new user.</p>

    {% if errors is not empty %}
    <div class="alert alert-warning">
      <p>Enkele velden zijn niet ingevuld!</p>
      <ul>
        {% for err in errors %}
          <li>{{ err }}</li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}

    <form class="form-horizontal" action="{{ route('user-add') }}" method="post">

      <div class="form-group row">
        <label for="first-name" class="col-sm-2 form-control-label">Voornaam</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="first-name" placeholder="John" name="first-name">
        </div>
      </div>

      <div class="form-group row">
        <label for="last-name" class="col-sm-2 form-control-label">Achternaam</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="last-name" placeholder="Doe" name="last-name">
        </div>
      </div>

      <div class="form-group row">
        <label for="email" class="col-sm-2 form-control-label">E-mail</label>
        <div class="col-sm-10">
          <input type="email" class="form-control" id="email" placeholder="j.doe@example.com" name="email">
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-2">Admin</label>
        <div class="col-sm-10">
          <div class="checkbox">
            <label>
              <input name="admin" type="checkbox"> User is admin
            </label>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" class="btn btn-primary" value="Add" />
          <a href="{{ route('user-list') }}" class="btn btn-secondary">Cancel</a>
        </div>
      </div>

    </form>
  </article>
{% endblock %}
