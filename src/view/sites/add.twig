{% extends '_template.twig' %}

{% block content %}
  <article>
    <h1>Nieuwe WordPress site</h1>
    <p>Voeg een nieuwe site toe. Er is geen limiet.</p>

    {% if errors is not empty %}
    <div class="alert alert-warning">
      <p>Enkele velden zijn niet ingevuld!</p>
      <ul>
        {% for err in errors %}
          <li>{{ err }}</li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}

    <form class="form-horizontal" action="{{ route('site-add') }}" method="post">

      <div class="form-group row">
        <label for="name" class="col-sm-2 form-control-label">Naam</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="name" placeholder="My website" name="name">
        </div>
      </div>

      <div class="form-group row">
        <label for="redirecturl" class="col-sm-2 form-control-label">Redirect URL</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="redirecturl" placeholder="https://example.com/" name="url">
        </div>
      </div>

      <div class="form-group row">
        <label for="version" class="col-sm-2 form-control-label">WordPress Versie</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="version" placeholder="4.5.2" name="version">
        </div>
      </div>

      <div class="form-group row">
        <label for="updates" class="col-sm-2 form-control-label">Aantal updates</label>
        <div class="col-sm-10">
          <input type="number" class="form-control" id="updates" placeholder="0" name="updates" min="0" inputmode="numeric">
        </div>
      </div>

      <div class="form-group row">
        <label for="owner" class="col-sm-2 form-control-label">Eigenaar</label>
        <div class="col-sm-10">
          {{ session.user.email }}
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" class="btn btn-primary" value="Toevoegen" />
          <a href="{{ route('site-list') }}" class="btn btn-secondary">Annuleren</a>
        </div>
      </div>

    </form>
  </article>
{% endblock %}
