{% extends '_template.twig' %}

{% block content %}
  <article>
    <h1>{{ client.name }} - WordPress site bewerken</h1>
    <p>Naam en redirect URL van een site aanpassen</p>

    {% if errors is not empty %}
    <div class="alert alert-warning">
      <p>Enkele velden zijn niet ingevuld!</p>
      <ul>
        {% for err in errors %}
          <li>{{ err }}</li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}

    <form class="form-horizontal" action="{{ route('site-edit', { id: client.id }) }}" method="post">

      <div class="form-group row">
        <label for="name" class="col-sm-2 form-control-label">Naam</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="name" placeholder="{{ client.name }}" name="name">
        </div>
      </div>

      <div class="form-group row">
        <label for="redirecturl" class="col-sm-2 form-control-label">Redirect URL</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="redirecturl" placeholder="{{ client.redirectUrl }}" name="url">
        </div>
      </div>

      <div class="form-group row">
        <label for="version" class="col-sm-2 form-control-label">WordPress Versie</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="version" placeholder="{{ client.version }}" name="version">
        </div>
      </div>

      <div class="form-group row">
        <label for="updates" class="col-sm-2 form-control-label">Aantal updates</label>
        <div class="col-sm-10">
          <input type="number" class="form-control" id="updates" placeholder="{{ client.updateCount }}" name="updates" min="0" inputmode="numeric">
        </div>
      </div>

      <div class="form-group row">
        <label for="owner" class="col-sm-2 form-control-label">Eigenaar</label>
        <div class="col-sm-10">
          {{ session.user.email }}
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" class="btn btn-primary" value="Bijwerken" />
          <a href="{{ route('site-list') }}" class="btn btn-secondary">Annuleren</a>
        </div>
      </div>

    </form>
  </article>
{% endblock %}
