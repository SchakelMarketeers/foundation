{
    "name": "schakel/foundation",
    "description": "Foundation for simple web apps",
    "type": "package",
    "homepage": "https://www.schakelmarketeers.nl/",
    "license": "AGPL-3.0",
    "authors": [
        {
            "name": "Roelof Roos",
            "email": "roelof@schakelmarketeers.nl"
        },
        {
            "name": "Joram Schrijver",
            "email": "joram@schakelmarketeers.nl"
        }
    ],
    "support": {
        "issues": "https://github.com/SchakelMarketeers/foundation/issues",
        "source": "https://github.com/SchakelMarketeers/foundation",
        "email": "info@schakelmarketeers.nl"
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "altorouter/altorouter": "^1.2",
        "doctrine/orm": "~2.5",
        "guzzlehttp/guzzle": "^6.2",
        "hassankhan/config": "^0.10.0",
        "jsonrpc/jsonrpc": "^1.0",
        "league/oauth2-google": "^1.0",
        "monolog/monolog": "^1.19",
        "nocarrier/hal": "^0.9.12",
        "paragonie/random_compat": "^2.0",
        "psr/log": "^1.0",
        "twig/twig": "^1.24"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.3",
        "sebastian/phpcpd": "^2.0",
        "pdepend/pdepend": "^2.2",
        "phploc/phploc": "^3.0",
        "simpspector/twig-lint": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Schakel\\Core\\": "src/core",
            "Schakel\\Model\\": "src/model",
            "Schakel\\View\\": "src/view",
            "Schakel\\Controller\\": "src/controller"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Schakel\\Test\\Core\\": "tests/core",
            "Schakel\\Test\\Model\\": "tests/model",
            "Schakel\\Test\\Controller\\": "tests/controller",
            "Schakel\\Test\\Helpers\\": "tests/helpers"
        }
    },
    "config": {
        "vendor-dir": "src/vendor"
    }
}
